<div local-class="atlas">
  <div local-class="wrapper">
    {{#pow-panzoom-container
      local-class="panzoom-container"
      minZoom=0.5
      maxZoom=1
      zoomSpeed=0.075
      onPanzoom=(action this.panzoom)
      onPanzoomInitialize=(action this.panzoomInitialize)
    }}
      <div
        local-class="map-background"
        style={{css-style "background-image" this.atlasBackgroundUrl}}
      ></div>

      {{#if this.maps}}
        <ul class="list-unstyled">
          {{#each this.maps as |map|}}
            {{pow-atlas/map
              map=map
              currentMap=@currentMap
              hoveredMap=this.hoveredMap
              onMapClick=(action this.mapSelect)
            }}
          {{/each}}
        </ul>
      {{/if}}

      {{#if @currentMap}}
        {{pow-atlas/sextants
          map=@currentMap
        }}
      {{/if}}
    {{/pow-panzoom-container}}
  </div>

  {{pow-atlas/searcher
    maps=this.searchedMaps
    onMapSearch=(action this.mapSearch)
    onMapSearchClear=(action this.mapSearchClear)
    onMapSelect=(action this.mapSelect)
    onMapHover=(action this.mapHover)
  }}

  <div local-class="disclaimer" class="bg-darker small p-1">
    {{t "components.atlas.disclaimer"}}
  </div>
</div>
